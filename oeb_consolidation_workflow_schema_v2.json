{
  "$id": "https://openebench.bsc.es/vre/Validation-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "OEB Benchmarking Consolidation Workflow",
  "description": "Specify a new OEB consolidation WF using a Nextflow.",
  "properties": {
    "type": {
      "type": "string",
      "title": "Benchmarking Workflow Type",
      "description": "Classification of the different benchmarking worflow types.",
      "default": "consolidation",
      "const": "consolidation",
      "minLength": 1,
      "readonly": true,
      "item": {
        "type": "string",
        "enum": [
          "validation",
          "metrics",
          "consolidation"
        ]
      },
      "uniqueItems": true,
      "options": {
        "hidden": true
      }
    },
    "external": {
      "type": "boolean",
      "title": "External Benchmarking Workflow",
      "description": "External WFs are elegible to be run by partipants.",
      "default": true,
      "const": true,
      "options": {
        "hidden": true
      }
    },
    "owner": {
      "type": "object",
      "title": "Owner",
      "minLength": 1,
      "description": "OEB Consolidation author. Corresponds to a VRE user identifier.",
      "properties": {
        "institution": {
          "type": "string",
          "title": "Institution"
        },
        "author": {
          "type": "string",
          "title": "Author",
          "minLength": 1
        },
        "contact": {
          "type": "string",
          "format": "email",
          "title": "Contact",
          "minLength": 1
        },
        "user": {
          "type": "string",
          "title": "User",
          "minLength": 1
        },
        "oeb_community": {
          "type": "string",
          "title": "oeb_community"
        }
      },
      "required": [
        "author",
        "contact",
        "user"
      ],
      "additionalProperties": false,
      "options": {
        "hidden": true
      }
    },
    "name": {
      "type": "string",
      "title": "Name (*)",
      "minLength": 1,
      "description": "Name for the new Consolidation step.",
      "options": {
        "inputAttributes": {
          "placeholder":  "The name here..."
        }
      }
    },
    "description": {
      "type": "string",
      "title": "Description",
      "description": "Short description detailing what the OEB Consolidation does.",
      "options": {
        "inputAttributes": {
          "placeholder":  "The short description here..."
        }
      }
    },
    "workflow_manager": {
      "type": "string",
      "title": "Workflow manager",
      "description": "Select a workflow manager.",
      "enum": [
        "Nextflow"
      ],
      "default": ["Nextflow"],
      "const": ["Nextflow"],
      "minLength": 2,
      "uniqueItems": true
    },
    "publication_status": {
      "type": "integer",
      "title": "Publication Status",
      "description": "Status to select which users can see the process.",
      "enum": [
        0,
        1,
        2,
        3,
        4
      ],
      "default": 3,
      "minLength": 1,
      "const": 3,
      "options": { 
        "enum_titles": 
          ["Coming soon",
            "Public",
            "Private",
            "Testing",
            "Community available"]
      },
      "readonly": true
    },
    "infrastructure": {
      "type": "object",
      "title": "Infrastructure details",
      "description": "Set the computational resources required by the Consolidation step.",
      "properties": {
        "cpus": {
          "type": "integer",
          "title": "CPUs",
          "description": "Cores required to run the Consolidation step.",
          "minimum": 1,
          "maximum": 12,
          "default": 1
        },
        "memory": {
          "type": "number",
          "title": "Memory",
          "description": "RAM memory in GB required to run the Consolidation step.",
          "minimum": 0,
          "maximum": 24,
          "default": 4
        },
        "wallTime": {
          "type": "integer",
          "title": "Walltime",
          "description": "Maximun time in minutes taken to run the Consolidation step.",
          "minimum": 5,
          "maximum": 1440,
          "default": 1440
        }
      },
      "additionalProperties": false,
      "required": [
        "cpus",
        "memory"
      ],
      "options": {
        "hidden": true
      }
    },
    "nextflow_files": {
      "type": "object",
      "title": "Nextflow files",
      "description": "Location of the nextflow files implementing the Consolidation step.",
      "properties": {
        "workflow_file": {
          "type": "object",
          "title": "Workflow file",
          "description": "Main workflow file Git.",
          "properties": {
            "workflow_gitURL": {
              "type": "string",
              "title": "Git URL (*)",
              "description": "Workflow's Git repository link. There have to be 'main.nf' and 'nextflow.config' files.",
              "format": "url",
              "options": {
                "inputAttributes": {
                  "placeholder":  "Example: https://github.com/nextflow/workflow.git"
                }
              },
              "minLength": 1
            },
            "workflow_gitTag": {
              "type": "string",
              "title": "Git Tag (*)",
              "minLength": 1,
              "description": "Workflows's Git branch/tag.",
              "default": "master"
            }
          },
          "required": [ 
            "workflow_gitURL", 
            "workflow_gitTag"
          ],
          "minLength": 1
        }
      },
      "required": [
        "workflow_file"
      ],
      "additionalProperties": false
    },
    "inputs_meta": {
      "type": "object",
      "title": "Input files & arguments",
      "description": "Definition of the different input elements feed into the OEB Validation.",
      "properties": {
        "validated_participant": {
          "type": "object",
          "title": "File: Validated Participant data",
          "description": "Metadata for the validated participant file containing the data validated.",
          "properties": {
            "name": {
              "type": "string",
              "title": "Nextflow Parameter Identifier",
              "description": "Identifier internally used by Nextflow to refer to the 'Validated Participant data' element.",
              "const": "validated_participant",
              "default": "validated_participant",
              "minLength": 1,
              "readonly": true
            },
            "type": {
              "type": "string",
              "title": "Type of Input",
              "description": "Type of input feed into the OEB Consolidation.",
              "enum": [
                "file_user",
                "file_community",
                "dir_community",
                "string",
                "integer",
                "number",
                "boolean",
                "enum",
                "enum_mult",
                "hidden"
              ],
              "default": "file_user",
              "const": "file_user",
              "options": { 
                "enum_titles": 
                  ["user file",
                  "challenge file",
                  "user dir",
                  "challenge dir",
                  "string",
                  "integer",
                  "number",
                  "boolean",
                  "enum",
                  "enum mult",
                  "hidden"],
                "hidden": true 
              },
              "minLength": 1
            },
            "value": {
              "type": "string",
              "format": "file",
              "title": "Validated Participant Sample (*)",
              "description": "Upload the Validated Participant sample",
              "media": {
                "binaryEncoding": "base64"
              },
              "minLength": 1
            }
          },
          "required": [
            "name",
            "type",
            "value"
          ],
          "additionalProperties": false
        },
        "assessment_results": {
          "type": "object",
          "title": "File: Assessment Results",
          "description": "Metadata for the assessment results file containing the data to be compared.",
          "properties": {
            "name": {
              "type": "string",
              "title": "Nextflow Parameter Identifier",
              "description": "Identifier internally used by Nextflow to refer to the 'Assessment results' element.",
              "const": "assessment_results",
              "default": "assessment_results",
              "minLength": 1,
              "readonly": true
            },
            "type": {
              "type": "string",
              "title": "Type of input",
              "description": "Type of input feed into the OEB Consolidation.",
              "enum": [
                "file_user",
                "file_community",
                "dir_community",
                "string",
                "integer",
                "number",
                "boolean",
                "enum",
                "enum_mult",
                "hidden"
              ],
              "default": "file_user",
              "const": "file_user",
              "options": { 
                "enum_titles": 
                  ["user file",
                  "challenge file",
                  "user dir",
                  "challenge dir",
                  "string",
                  "integer",
                  "number",
                  "boolean",
                  "enum",
                  "enum mult",
                  "hidden"],
                "hidden": true 
              },
              "minLength": 1
            },
            "value": {
              "type": "string",
              "format": "file",
              "title": "Assessment Result Sample (*)",
              "description": "Upload the Assessment Result sample",
              "media": {
                "binaryEncoding": "base64"
              },
              "minLength": 1
            }
          },
          "required": [
            "name",
            "type",
            "value"
          ],
          "additionalProperties": false
        },
        "assess_dir": {
          "type": "object",
          "title": "Directory: Assessment Directory",
          "description": "Metadata for the reference dataset.",
          "properties": {
            "name": {
              "type": "string",
              "title": "Nextflow Parameter Identifier",
              "description": "Identifier internally used by Nextflow to refer to the 'Assessment Directory' element.",
              "const": "assess_dir",
              "default": "assess_dir",
              "minLength": 1,
              "readonly": true
            },
            "type": {
              "type": "string",
              "title": "Type of Input",
              "description": "Type of input feed into the OEB Consolidation",
              "enum": [
                "file_user",
                "file_community",
                "dir_community",
                "string",
                "integer",
                "number",
                "boolean",
                "enum",
                "enum_mult",
                "hidden"
              ],
              "default": "dir_community",
              "minLength": 1,
              "const": "dir_community",
              "options": { 
                "enum_titles": 
                  ["user file",
                  "challenge file",
                  "user dir",
                  "challenge dir",
                  "string",
                  "integer",
                  "number",
                  "boolean",
                  "enum",
                  "enum mult",
                  "hidden"],
                "hidden": true
              }
            },
            "value": {
              "type": "string",
              "format": "file",
              "title": "Assessment Directory Sample - TAR(*)",
              "description": "Upload the Assessment Directory sample",
              "media": {
                "binaryEncoding": "base64"
              },
              "minLength": 1
            }
          },
          "required": [
            "name",
            "type",
            "value"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "validated_participant",
        "assessment_results",
        "assess_dir"
      ],
      "minLength": 1
    },
    "outputs_meta": {
      "type": "object",
      "title": "Output Results",
      "description": "Definition of the different 'Data Model Export Directories' elements the OEB Consolidation generate.",
      "properties": {
        "data_model_export_dir": {
          "type": "object",
          "title": "Data Model Export Directory",
          "description": "Metrics derivated from the given input data.",
          "properties": {
            "name": {
              "type": "string",
              "title": "Nextflow Parameter Identifier (*)",
              "description": "Identifier internally used by Nextflow to refer to the 'Consolidation Participant' element.",
              "const": "data_model_export_dir",
              "default": "data_model_export_dir",
              "minLength": 1,
              "readonly": true
            },
            "type": {
              "type": "string",
              "title": "Type of Output",
              "description": "Type of output (Validated Participant) feed into the OEB Validation.",
              "enum": [
                "user_file",
                "challenge_file",
                "user_dir",
                "challenge_dir",
                "string",
                "integer",
                "number",
                "boolean",
                "enum",
                "enum_mult",
                "hidden"
              ],
              "minLength": 1,
              "default": "user_dir",
              "const": "user_dir",
              "options": { 
                "enum_titles": 
                  ["user file",
                  "challenge file",
                  "user dir",
                  "challenge dir",
                  "string",
                  "integer",
                  "number",
                  "boolean",
                  "enum",
                  "enum mult",
                  "hidden"],
                "hidden": true 
              }
            },
            "value": {
              "type": "string",
              "format": "file",
              "title": "Data Model Export Directory Sample - TAR (*)",
              "description": "Upload the Data Model Export Directory sample",
              "media": {
                "binaryEncoding": "base64",
                "type": "application/x-tar"
              },
              "minLength": 1
            }
          },
          "required": [
            "name",
            "type",
            "value"
          ],
          "additionalProperties": false
        },
        "out_dir": {
          "type": "object",
          "title": "Output Directory (*)",
          "properties": {
            "name": {
              "type": "string",
              "title": "Nextflow Parameter Identifier (*)",
              "description": "Identifier internally used by nextflow to refer to the 'Output Directory' element.",
              "const": "out_dir",
              "default": "out_dir",
              "readonly": true,
              "minLength": 1
            },
            "type": {
              "type": "string",
              "title": "Type of Output",
              "description": "Type of output (Output Directory) feed into the OEB Consolidation.",
              "enum": [
                "user_file",
                "challenge_file",
                "user_dir",
                "challenge_dir",
                "string",
                "integer",
                "number",
                "boolean",
                "enum",
                "enum_mult",
                "hidden"
              ],
              "minLength": 1,
              "default": "user_dir",
              "const": "user_dir",
              "options": { 
                "enum_titles": 
                  ["user file",
                  "challenge file",
                  "user dir",
                  "challenge dir",
                  "string",
                  "integer",
                  "number",
                  "boolean",
                  "enum",
                  "enum mult",
                  "hidden"],
                "hidden": true 
              }
            },
            "value": {
              "type": "string",
              "format": "file",
              "title": "Output Directory Sample - TAR (*)",
              "description": "Upload the Output Directory sample",
              "media": {
                "binaryEncoding": "base64",
                "type": "application/x-tar"
              },
              "minLength": 1
            }
          },
          "required": [
            "name",
            "type",
            "value"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "data_model_export_dir",
        "out_dir"
      ],
      "minLength": 1
    }
  },
  "required": [
    "name",
    "type",
    "owner",
    "publication_status",
    "inputs_meta",
    "outputs_meta",
    "workflow_manager"
  ],
  "additionalProperties": false,
  "format": "categories",
  "basicCategoryTitle": "STEP 1: Generic Information",
  "show_errors": "interaction"
}
