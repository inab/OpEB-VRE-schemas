{
  "$id": "https://openebench.bsc.es/vre/Validation-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "OEB Benchmarking Consolidation Workflow",
  "description": "Specify a new OEB consolidation WF using a Nextflow.",
  "properties": {
    "type": {
      "type": "string",
      "title": "Benchmarking Workflow Type",
      "description": "Classification of the different benchmarking worflow types.",
      "default": "consolidation",
      "const": "consolidation",
      "minLength": 1,
      "readonly": true,
      "item": {
        "type": "string",
        "enum": [
          "validation",
          "metrics",
          "consolidation"
        ]
      },
      "uniqueItems": true,
      "options": {
        "hidden": true
      }
    },
    "external": {
      "type": "boolean",
      "title": "External Benchmarking Workflow",
      "description": "External WFs are elegible to be run by partipants.",
      "default": true,
      "const": true,
      "options": {
        "hidden": true
      }
    },
    "owner": {
      "type": "object",
      "title": "Owner",
      "minLength": 1,
      "description": "OEB Consolidation author. Corresponds to a VRE user identifier.",
      "properties": {
        "institution": {
          "type": "string",
          "title": "Institution"
        },
        "author": {
          "type": "string",
          "title": "Author",
          "minLength": 1
        },
        "contact": {
          "type": "string",
          "format": "email",
          "title": "Contact",
          "minLength": 1
        },
        "user": {
          "type": "string",
          "title": "User",
          "minLength": 1
        },
        "oeb_community": {
          "type": "string",
          "title": "oeb_community"
        }
      },
      "required": [
        "author",
        "contact",
        "user"
      ],
      "additionalProperties": false,
      "options": {
        "hidden": true
      }
    },
    "name": {
      "type": "string",
      "title": "Name (*)",
      "minLength": 1,
      "description": "Name for the new Consolidation step.",
      "options": {
        "inputAttributes": {
          "placeholder":  "The name here..."
        }
      }
    },
    "description": {
      "type": "string",
      "title": "Description",
      "description": "Short description detailing what the OEB Consolidation does.",
      "options": {
        "inputAttributes": {
          "placeholder":  "The short description here..."
        }
      }
    },
    "description_long": {
      "type": "string",
      "title": "Long description",
      "description": "A longer description detailing what the OEB Consolidation does.",
      "options": {
        "inputAttributes": {
          "placeholder":  "The long description here..."
        }
      }
    },
    "keywords": {
      "type": "array",
      "title": "Generic keywords",
      "description": "Select the keywords that better define the field of your Consolidation step.",
      "items": {
        "type": "string",
        "title": "keyword",
        "enum": [
          "phylogenetics",
          "cancer_genomics",
          "pharmacogenomics",
          "3D_modeling",
          "other"
        ]
      },
      "uniqueItems": true,
      "default": "other",
      "format": "select"
    },
    "keywords_tool": {
      "title": "Custom keywords",
      "description": "Define a number of keywords describing you Consolidation step.",
      "type": "array",
      "items": {
        "title":"Custom keyword",
        "type": "string",
        "options": {
          "inputAttributes": {
            "placeholder":  "Ex. 2D_modeling"
          }
        }
      }
    },
    "workflow_manager": {
      "type": "string",
      "title": "Workflow manager",
      "description": "Select a workflow manager.",
      "enum": [
        "Nextflow"
      ],
      "default": ["Nextflow"],
      "const": ["Nextflow"],
      "minLength": 2,
      "uniqueItems": true
    },
    "infrastructure": {
      "type": "object",
      "title": "Infrastructure details",
      "description": "Set the computational resources required by the Valitation step.",
      "properties": {
        "cpus": {
          "type": "integer",
          "title": "CPUs",
          "description": "Cores required to run the Consolidation step.",
          "minimum": 1,
          "maximum": 12,
          "default": 1
        },
        "memory": {
          "type": "number",
          "title": "Memory",
          "description": "RAM memory in GB required to run the Consolidation step.",
          "minimum": 0,
          "maximum": 24,
          "default": 4
        },
        "wallTime": {
          "type": "integer",
          "title": "Walltime",
          "description": "Maximun time in minutes taken to run the Consolidation step.",
          "minimum": 5,
          "maximum": 1440,
          "default": 1440
        },
        "clouds": {
          "type": "array",
          "title": "Cloud infrastructure",
          "description": "Cloud infrastructure where the Consolidation is going to be installed.",
          "items": {
            "type": "string",
            "enum": [
              "life-bsc"
            ]
          },
          "uniqueItems": true,
          "format": "select",
          "const": ["life-bsc"],
          "default": ["life-bsc"]
        }
      },
      "additionalProperties": false,
      "required": [
        "cpus",
        "memory",
        "clouds"
      ],
      "options": {
        "hidden": true
      }
    },
    "nextflow_files": {
      "type": "object",
      "title": "Nextflow files",
      "description": "Location of the nextflow files implementing the Consolidation step.",
      "properties": {
        "workflow_file": {
          "type": "object",
          "title": "Workflow file",
          "description": "Main workflow file Git.",
          "properties": {
            "workflow_gitURL": {
              "type": "string",
              "title": "Git URL (*)",
              "description": "Workflow's Git repository link. There have to be 'main.nf' and 'nextflow.config' files.",
              "format": "url",
              "options": {
                "inputAttributes": {
                  "placeholder":  "Example: https://github.com/nextflow/workflow.git"
                }
              },
              "minLength": 1
            },
            "workflow_gitTag": {
              "type": "string",
              "title": "Git Tag (*)",
              "minLength": 1,
              "description": "Workflows's Git branch/tag.",
              "default": "master"
            }
          },
          "required": [ 
            "workflow_gitURL", 
            "workflow_gitTag"
          ],
          "minLength": 1
        }
      },
      "required": [
        "workflow_file"
      ],
      "additionalProperties": false
    },
    "inputs_meta": {
      "type": "object",
      "title": "Input files & arguments",
      "description": "Definition of the different input elements feed into the OEB Consolidation.",
      "properties": {
        "validated_participant": {
          "type": "object",
          "title": "File: Validated Participant data",
          "description": "Metadata for the validated participant file containing the data validated.",
          "properties": {
            "name": {
              "type": "string",
              "title": "Nextflow Parameter Identifier",
              "description": "Identifier internally used by Nextflow to refer to the 'Validated Participant data' element.",
              "const": "validated_participant",
              "default": "validated_participant",
              "minLength": 1,
              "readonly": true
            },
            "type": {
              "type": "string",
              "title": "Type of Input",
              "description": "Type of input feed into the OEB Consolidation.",
              "enum": [
                "file_user",
                "file_community",
                "dir_community",
                "string",
                "integer",
                "number",
                "boolean",
                "enum",
                "enum_mult",
                "hidden"
              ],
              "default": "file_user",
              "const": "file_user",
              "options": { 
                "enum_titles": 
                  ["user file",
                  "challenge file",
                  "user dir",
                  "challenge dir",
                  "string",
                  "integer",
                  "number",
                  "boolean",
                  "enum",
                  "enum mult",
                  "hidden"],
                "hidden": true 
              },
              "minLength": 1
            },
            "value": {
              "type": "string",
              "format": "file",
              "title": "Validated Participant Sample (*)",
              "description": "Upload the Validated Participant sample",
              "media": {
                "binaryEncoding": "base64"
              },
              "minLength": 1
            }
          },
          "required": [
            "name",
            "type",
            "value"
          ],
          "additionalProperties": false
        },
        "assessment_results": {
          "type": "object",
          "title": "File: Assessment Results",
          "description": "Metadata for the assessment results file containing the data to be compared.",
          "properties": {
            "name": {
              "type": "string",
              "title": "Nextflow Parameter Identifier",
              "description": "Identifier internally used by Nextflow to refer to the 'Assessment results' element.",
              "const": "assessment_results",
              "default": "assessment_results",
              "minLength": 1,
              "readonly": true
            },
            "type": {
              "type": "string",
              "title": "Type of input",
              "description": "Type of input feed into the OEB Consolidation.",
              "enum": [
                "file_user",
                "file_community",
                "dir_community",
                "string",
                "integer",
                "number",
                "boolean",
                "enum",
                "enum_mult",
                "hidden"
              ],
              "default": "file_user",
              "const": "file_user",
              "options": { 
                "enum_titles": 
                  ["user file",
                  "challenge file",
                  "user dir",
                  "challenge dir",
                  "string",
                  "integer",
                  "number",
                  "boolean",
                  "enum",
                  "enum mult",
                  "hidden"],
                "hidden": true 
              },
              "minLength": 1
            },
            "value": {
              "type": "string",
              "format": "file",
              "title": "Assessment Result Sample (*)",
              "description": "Upload the Assessment Result sample",
              "media": {
                "binaryEncoding": "base64"
              },
              "minLength": 1
            }
          },
          "required": [
            "name",
            "type",
            "value"
          ],
          "additionalProperties": false
        },
        "assess_dir": {
          "type": "object",
          "title": "Directory: Assessment Directory",
          "description": "Metadata for the reference dataset.",
          "properties": {
            "name": {
              "type": "string",
              "title": "Nextflow Parameter Identifier",
              "description": "Identifier internally used by Nextflow to refer to the 'Assessment Directory' element.",
              "const": "assess_dir",
              "default": "assess_dir",
              "minLength": 1,
              "readonly": true
            },
            "type": {
              "type": "string",
              "title": "Type of Input",
              "description": "Type of input feed into the OEB Consolidation",
              "enum": [
                "file_user",
                "file_community",
                "dir_community",
                "string",
                "integer",
                "number",
                "boolean",
                "enum",
                "enum_mult",
                "hidden"
              ],
              "default": "dir_community",
              "minLength": 1,
              "const": "dir_community",
              "options": { 
                "enum_titles": 
                  ["user file",
                  "challenge file",
                  "user dir",
                  "challenge dir",
                  "string",
                  "integer",
                  "number",
                  "boolean",
                  "enum",
                  "enum mult",
                  "hidden"],
                "hidden": true
              }
            },
            "label": {
              "type": "string",
              "title": "Label",
              "description": "Label for the dataset as displayed to the researcher at the web site.",
              "const": "Assessment Directory",
              "default": "Assessment Directory",
              "minLength": 1,
              "options": {"hidden": true}
            },
            "help": {
              "type": "string",
              "title": "Help text",
              "description": "Short informative text explaining the 'Assessment Directory' element. The text is displayed as a tooltip to the researcher at the web site.",
              "const": "Folder containing the Assessment dataset",
              "default": "Folder containing the Assessment dataset",
              "options": {"hidden": true}
            },
            "file_type": {
              "type": "array",
              "title": "Accepted file types",
              "description": "File formats that might present the 'Assessment Directory'. Elegible formats: https://w3id.org/oebDataFormats.",
              "items": {
                "type": "string",
                "format": "term",
                "ontology": "https://w3id.org/oebDataFormats",
                "ancestors": "https://w3id.org/oebDataFormats/FormatDatasets",
                "matchType": "label",
                "options": {}
              },
              "format": "select",
              "uniqueItems": true,
              "const": [
                "https://w3id.org/oebDataFormats/TAR"
              ],
              "default": [
                "https://w3id.org/oebDataFormats/TAR"
              ],
              "minItems": 1,
              "options": {"hidden": true}
            },
            "data_type": {
              "type": "array",
              "title": "Accepted dataset types",
              "description": "Dataset types that 'Public Reference dataset'  might belong to.",
              "items": {
                "type": "string",
                "format": "term",
                "ontology": "https://w3id.org/oebDatasets",
                "ancestors": "https://w3id.org/oebDatasets/dataset",
                "matchType": "label",
                "options": {}
              },
              "format": "select",
              "uniqueItems": true,
              "const": [
                "https://w3id.org/oebDatasets/assessment"
              ],
              "default": [
                "https://w3id.org/oebDatasets/assessment"
              ],
              "minItems": 1,
              "options": {"hidden": true}
            },
            "value": {
              "type": "string",
              "format": "file",
              "title": "TAR file (*)",
              "description": "Upload the assessment directory",
              "media": {
                "binaryEncoding": "base64",
                "type": "application/x-tar"
              },
              "minLength": 1
            }
          },
          "required": [
            "name",
            "type",
            "label",
            "value",
            "data_type",
            "file_type"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "validated_participant",
        "assessment_results",
        "assess_dir"
      ],
      "minLength": 1
    },
    "outputs_meta": {
      "type": "object",
      "title": "Output results",
      "description": "Definition of the different output elements the OEB Consolidation generate.",
      "properties": {
        "data_model_export_dir": {
          "type": "object",
          "title": "Consolidation Result",
          "description": "Metrics derivated from the given input data.",
          "properties": {
            "name": {
              "type": "string",
              "title": "Internal identifier",
              "description": "Identifier internally used by Nextflow to refer to the 'Data Model Export Directory' element.",
              "const": "data_model_export_dir",
              "default": "data_model_export_dir",
              "minLength": 1,
              "readonly": true
            }
          },
          "required": [
            "name",
            "data_type",
            "file_type"
          ],
          "additionalProperties": false,
          "minLength": 1
        },
        "out_dir": {
          "type": "object",
          "title": "Output Directory",
          "description": "Execution monitoring and logging data.",
          "properties": {
            "name": {
              "type": "string",
              "title": "Internal identifier",
              "description": "Identifier internally used by Nextflow to refer to the 'Output Directory' element.",
              "const": "out_dir",
              "default": "out_dir",
              "readonly": true,
              "minLength": 1
            },
            "file_type": {
              "type": "array",
              "title": "Accepted file types",
              "description": "File formats that might present the 'Output Directory'. Elegible formats: https://w3id.org/oebDataFormats.",
              "items": {
                "type": "string",
                "format": "term",
                "ontology": "https://w3id.org/oebDataFormats",
                "ancestors": "https://w3id.org/oebDataFormats/FormatDatasets",
                "matchType": "label",
                "options": {}
              },
              "format": "select",
              "uniqueItems": true,
              "const": [
                "https://w3id.org/oebDataFormats/TAR"
              ],
              "default": [
                "https://w3id.org/oebDataFormats/TAR"
              ],
              "readonly": true,
              "minItems": 1
            },
            "data_type": {
              "type": "array",
              "title": "Accepted dataset types",
              "description": "Dataset types that 'Workflow Statistics'  might belong to.",
              "items": {
                "type": "string",
                "format": "term",
                "ontology": "https://w3id.org/oebDatasets",
                "ancestors": "https://w3id.org/oebDatasets/dataset",
                "matchType": "label",
                "options": {}
              },
              "format": "select",
              "uniqueItems": true,
              "const": [
                "https://w3id.org/oebDatasets/tool_statistics"
              ],
              "default": [
                "https://w3id.org/oebDatasets/tool_statistics"
              ],
              "readonly": true,
              "minItems": 1
            },
            "compressed": {
              "type": "array",
              "title": "Accepted dataset types",
              "description": "Compressed type that 'Output Directory'  might belong to.",
              "items": {
                "type": "string",
                "enum": ["gzip"]
              },
              "format":"select",
              "readonly": true,
              "uniqueItems": true,
              "default": ["gzip"],
              "minLength": 1
            }
          },
          "required": [
            "name",
            "data_type",
            "file_type",
            "compressed"
          ],
          "additionalProperties": false,
          "minLength": 1
        }
      },
      "required": [
        "data_model_export_dir",
        "out_dir"
      ],
      "minLength": 1,
      "options": {"hidden": true}
    }
  },
  "required": [
    "title",
    "name",
    "type",
    "owner",
    "inputs_meta",
    "outputs_meta",
    "workflow_manager"
  ],
  "additionalProperties": false,
  "format": "categories",
  "basicCategoryTitle": "STEP 1: Generic Information",
  "show_errors": "interaction"
}
