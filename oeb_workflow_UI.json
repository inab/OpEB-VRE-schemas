                  "challenge file",
                  "user dir",
                  "challenge dir",
                  "string",
                  "integer",
                  "number",
                  "boolean",
                  "enum",
                  "enum mult",
                  "hidden"],
                "hidden": true 
              }
            },
            "value": {
              "type": "string",
              "title": "Participant Identifier Sample (*)",
              "description": "Write the participant identifier sample",
              "minLength": 1,
              "options": {
                "inputAttributes": {
                  "placeholder":  "The value of participant identifier here..."
                }
              }
            }
          },
          "required": [
            "name",
            "type",
            "value"
          ]
        },
        "community_id": {
          "type": "object",
