                "dir_community",
                "string",
                "integer",
                "number",
                "boolean",
                "enum",
                "enum_mult",
                "hidden"
              ],
              "default": "dir_community",
              "minLength": 1,
              "const": "dir_community",
              "options": { 
                "enum_titles": 
