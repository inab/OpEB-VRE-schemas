{
	"$id": "https://www.elixir-europe.org/excelerate/WP2/json-schemas/2.0/Reference",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$comment": "allOf and placeholders inspired by https://stackoverflow.com/a/24365393",
	"allOf": [
		{
			"$ref": "_shared#/definitions/CommonKeys"
		}
	],
	"type": "object",
	"properties": {
		"_id": {
			"title": "Reference ID",
			"description": "The unique id of the bibliographic reference. It is either its DOI or its PubMedId",
			"$ref": "_shared#/definitions/ReferenceCanonicalId",
			"widget": {
				"formlyConfig": {
					"templateOptions": {
						"placeholder": "Example: Reference_322"
					}
				}
			}
		},
		"title": {
			"title": "Title",
			"description": "Title of Referenced material",
			"type": "string",
			"widget": {
				"formlyConfig": {
					"templateOptions": {
						"placeholder": "Example: Some Referenced material's Title"
					}
				}
			}
		},
		"abstract": {
			"title": "Reference material abstract",
			"description": "Optionally, the abstract of the referenced material",
			"type": "string",
			"widget": {
				"formlyConfig": {
					"templateOptions": {
						"placeholder": "Example: Some abstract referenced material"
					}
				}
			}
		},
		"bibliographic_ids": {
			"title": "Bibliographic IDs*",
			"description": "The recorded bibliographic ids of the referenced material, as CURIE/identifiers.org format or a bare link",
			"type": "array",
			"minItems": 1,
			"items": {
				"title": "Accepted IDs",
				"description": "Currently, the accepted ids are pmid, doi and pmc",
				"type": "string",
				"format": "uri",
				"pattern": "^(pmid|doi|pmc|isbn|issn|http(s)?):.+$",
				"widget": {
					"formlyConfig": {
						"templateOptions": {
							"placeholder": "Example: Bibliographic23"
						}
					}
				}
			}
		},
		"authors": {
			"title": "Authors of Referenced material",
			"description": "Optional list of authors of the referenced material",
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "object",
				"properties": {
					"givenName": {
						"title": "First / given name (or initials)",
						"type": "array",
						"minItems": 1,
						"items": {
							"type": "string",
							"minLength": 1
						}
					},
					"surname": {
						"title": "Surname(s)",
						"type": "array",
						"minItems": 1,
						"items": {
							"type": "string",
							"minLength": 1
						}
					},
					"contact_id": {
						"title": "Contact ID",
						"description": "If it is a known contact, its contact id",
						"type": "string",
						"foreign_keys": [
							{
								"schema_id": "Contact",
								"members": [ "." ]
							}
						],
						"minLength": 1
					}
				},
				"additionalProperties": false,
				"required": [
					"givenName",
					"surname"
				]
			}
		}
	},
	"additionalProperties": false,
	"required": [
		"_id",
		"_schema",
		"title",
		"bibliographic_ids"
	],
	"primary_key": ["_id"],
	"dependencies": {}
}
