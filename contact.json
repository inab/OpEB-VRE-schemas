{
	"$id": "https://www.elixir-europe.org/excelerate/WP2/json-schemas/2.0/Contact",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Contact concept (ELIXIR-EXCELERATE WP2 Benchmarking schemas)",
	"$comment": "allOf and placeholders inspired by https://stackoverflow.com/a/24365393",
	"allOf": [
		{
			"$ref": "_shared#/definitions/CommonKeys"
		},
		{
			"$ref": "_shared#/definitions/LinksDescProp"
		}
	],
	"type": "object",
	"properties": {
		"_id": {
			"$ref": "_shared#/definitions/ContactCanonicalId"
		},
		"links": {
			"$comment": "Placeholder covered by _shared#/definitions/LinksDescProp",
			"title": "Optional links related to the contact"
		},
		"givenName": {
			"title": "First / given name",
			"type": "string",
			"minLength": 1
		},
		"surname": {
			"title": "Surname(s)",
			"type": "string",
			"minLength": 1
		},
		"email": {
			"title": "The e-mail address(es) of the contact",
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"type": "string",
				"minLength": 1,
				"format": "email"
			}
		},
		"community_id": {
			"title": "The community id where this contact first attached to",
			"type": "string",
			"foreign_keys": [
				{
					"schema_id": "Community",
					"members": [ "." ]
				}
			],
			"minLength": 7
		},
		"notes": {
			"title": "Comments about the contact",
			"type": "string"
		}
	},
	"additionalProperties": false,
	"required": [
		"_id",
		"_schema",
		"email",
		"community_id"
	],
	"primary_key": ["_id"],
	"dependencies": {}
}
